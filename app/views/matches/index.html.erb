
<table>
  <thead>
    <tr>
      <th>Match Date</th>
      <th>Home Team</th>
      <th>Away Team</th>
      <th>Goals Home</th>
      <th>Goals Away</th>
      <th>Result</th>
      <th>Odds 1</th>
      <th>Odds X</th>
      <th>Odds 2</th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.match_date %></td>
        <td><%= match.home_team %></td>
        <td><%= match.away_team %></td>
        <td><%= match.goals_home %></td>
        <td><%= match.goals_away %></td>
        <td><%= match.result %></td>
        <td><%= match.odds_1 %></td>
        <td><%= match.odds_x %></td>
        <td><%= match.odds_2 %></td>
      </tr>
    <% end %>
  </tbody>
</table>