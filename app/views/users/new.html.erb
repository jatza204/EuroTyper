<!-- app/views/users/new.html.erb -->

<h1>New User</h1>

<%= form_with(model: User.new, local: true) do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :wallet_funds %>
    <%= form.number_field :wallet_funds, step: 0.01 %>
  </div>

  <div>
    <%= form.label :league %>
    <%= form.text_field :league %>
  </div>

  <div>
    <%= form.label :user_class %>
    <%= form.text_field :user_class %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', users_path %>